<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingresar"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:textSize="25dp" />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/emailLayoutR"
        android:layout_centerVertical="true">
        <EditText
            android:id="@+id/emailTxt"
            android:inputType="textEmailAddress"
            android:hint="Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/psswdLayoutR"
        android:layout_below="@id/emailLayoutR"
        app:passwordToggleEnabled="true">
        <EditText
            android:id="@+id/psswdTxt"
            android:inputType="textPassword"
            android:hint="Contraseña"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!--android:drawable_left=""-->
    <TextView
        android:id="@+id/recuperarContraseña"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="10dp"
        android:layout_below="@id/NotengoCuentaBtn"
        android:text="¿Olvidaste tu contraseña?"/>

    <Button
        android:id="@+id/ingresarBtn"
        android:layout_centerHorizontal="true"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/psswdLayoutR"
        android:layout_marginTop="77dp"
        android:text="Ingresar"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/NotengoCuentaBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="20dp"
        android:layout_below="@id/ingresarBtn"
        android:text="¿No tienes cuenta? Crea una."/>

</RelativeLayout>