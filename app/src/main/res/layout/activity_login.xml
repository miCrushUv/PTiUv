<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/fondo"
    android:layout_height="match_parent"
    android:padding="18dp"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="400dp"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="86dp"
        android:scaleType="fitXY"
        android:src="@drawable/ingresar"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="40dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/emailLayoutR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColorHint="@color/colorWhite"
        app:passwordToggleDrawable="@color/colorWhite"
        app:passwordToggleTint="@color/colorWhite">

        <EditText
            android:id="@+id/emailTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorWhite"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="@color/colorWhite"
            android:textColorHighlight="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:textColorLink="@color/colorWhite"
            android:textCursorDrawable="@color/colorWhite" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/psswdLayoutR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailLayoutR"
        android:layout_centerInParent="true"
        android:textColorHint="@color/colorWhite"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/colorWhite">

        <EditText
            android:id="@+id/psswdTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorWhite"
            android:baselineAligned="false"
            android:foregroundTint="@color/colorWhite"
            android:hint="Contraseña"
            android:hyphenationFrequency="normal"
            android:inputType="textPassword"
            android:textColor="@color/colorWhite"
            android:textColorHighlight="@color/colorWhite"
            android:textCursorDrawable="@color/colorWhite" />
    </com.google.android.material.textfield.TextInputLayout>

    <!--android:drawable_left=""-->

    <TextView
        android:id="@+id/recuperarContraseña"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/NotengoCuentaBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:text="¿Olvidaste tu contraseña?"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/NotengoCuentaBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ingresarBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:text="¿No tienes cuenta? Crea una."
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="15dp" />

    <Button
        android:id="@+id/ingresarBtn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="250dp"
        android:layout_height="37dp"
        android:layout_below="@id/psswdLayoutR"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="79dp"

        android:backgroundTint="@color/colorWhite"
        android:text="Ingresar"
        android:textColor="@color/letras"
        android:textSize="14sp"
        app:cornerRadius="150dp" />


</RelativeLayout>